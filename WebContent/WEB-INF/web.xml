<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>estore</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.RegisterSetvlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>addOrder</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.AddOrderlineServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addOrder</servlet-name>
  	<url-pattern>/addProduct.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>shopCar</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ShopCarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>shopCar</servlet-name>
  	<url-pattern>/shopCar.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>deleteOrderline</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.DeleteOrderlineServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deleteOrderline</servlet-name>
  	<url-pattern>/removeProduct.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>updateOrderline</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.EditOrderlineServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>updateOrderline</servlet-name>
  	<url-pattern>/updateProduct.action</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>clearCar</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ClearCarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>clearCar</servlet-name>
  	<url-pattern>/removeAllProduct.action</url-pattern>
  </servlet-mapping>
</web-app>